# ==============================================================================
# Forecaster Enterprise - Environment Configuration
# ==============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_USER=postgres
DB_PASSWORD=change-me-in-production
DB_NAME=forecaster_enterprise

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# JWT Secret Key - REQUIRED - Generate with: openssl rand -hex 32
JWT_SECRET_KEY=

# ------------------------------------------------------------------------------
# Admin User (created on first startup)
# ------------------------------------------------------------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production
ADMIN_NAME=Admin User

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
# Nuxt Session Password - REQUIRED - Generate with: openssl rand -hex 32
NUXT_SESSION_PASSWORD=

# Public API URL (what the browser uses to reach the backend)
# Change if running on different host/port or using a domain
NUXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Sentry Configuration (Optional)
NUXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-auth-token  # Optional, for source maps

# ------------------------------------------------------------------------------
# License Configuration
# ------------------------------------------------------------------------------
LICENSE_URL=https://your-project.supabase.co/functions/v1/check-license
LICENSE_KEY=lk-your-license-key-here
CHECK_INTERVAL=3600
GRACE_PERIOD=172800

# ------------------------------------------------------------------------------
# First-Time Setup (Optional)
# ------------------------------------------------------------------------------
# Set to true to load demo/test data on first startup
SETUP_TEST_DATA=false
CLIENT_NAME=Demo Client

# Path to CSV file inside container (mounted from ./data)
# Example: /app/data/synthetic_data/synthetic_ecom_chronos2_demo.csv
CSV_PATH=

# Optional test user (in addition to admin)
TEST_EMAIL=
TEST_PASSWORD=
TEST_NAME=Test User