# ==============================================================================
# Forecaster Enterprise - Environment Configuration
# ==============================================================================
# Copy this file to .env and update with your actual values

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=forecaster_enterprise

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# JWT Secret Key - Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
# Nuxt Session Password - Generate with: openssl rand -hex 32
NUXT_SESSION_PASSWORD=your-32-char-secret-here

# ------------------------------------------------------------------------------
# License Configuration
# ------------------------------------------------------------------------------
LICENSE_URL=https://your-project.supabase.co/functions/v1/check-license
LICENSE_KEY=lk-your-license-key-here
CHECK_INTERVAL=3600
GRACE_PERIOD=172800

# ------------------------------------------------------------------------------
# First-Time Setup (Optional)
# ------------------------------------------------------------------------------
# These are used only on first startup to create admin user and test data
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User

# Set to true to load demo/test data on first startup
SETUP_TEST_DATA=false
CLIENT_NAME=Demo Client
